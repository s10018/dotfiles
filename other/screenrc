
shell "/bin/zsh"

#backtick 0 600 1 battery
autodetach on
bell_msg "^G"
defkanji utf-8
defencoding utf-8
encoding utf-8 utf-8
defscrollback 10000
escape ^Ff
startup_message off
vbell off
caption always "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk} [%l] %{=b wb}%y/%m/%d %` %{=b wm}%c"
bind N screen
bind p prev
bind n next
bind l windowlist

# defhstatus "$USER@^EH_^En ^Et -- ^EW"
termcapinfo xterm* ti@:te@
